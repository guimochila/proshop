{
  "name": "@proshop/server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">14.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.40",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "@types/validator": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/src/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules/ ./src/shared/http/server.ts",
    "build": "tsc",
    "sample": "ts-node ./data/load-sample-data.ts",
    "sample:remove": "ts-node ./data/load-sample-data.ts --delete",
    "precommit": "lint-staged",
    "typeorm": "ts-node-dev -r tsconfig-paths/register tools/typeormcli.ts --config ./src/config/ormconfig.ts",
    "seed:generate": "yarn typeorm migration:generate -c seed -n InsertProductSamples",
    "seed:run": "yarn typeorm migration:run -c seed",
    "seed:revert": "yarn typeorm migration:revert -c seed"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41",
    "validator": "^13.7.0",
    "winston": "^3.3.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
