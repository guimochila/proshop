{
  "name": "proshop",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^7.0.4",
    "turbo": "^1.0.13"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "precommit": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
